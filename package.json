{
  "name": "peppermint",
  "version": "1.0.0",
  "main": "index.js",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/johncalvinroberts/peppermint",
  "author": "John Roberts",
  "scripts": {
    "prebuild": "make clean-build",
    "build": "parcel build --no-cache --no-content-hash src/index.html",
    "postbuild": "react-snap",
    "start": "parcel serve src/index.html"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "browser-id3-writer": "^4.4.0",
    "hhmmss": "^1.0.0",
    "id3-parser": "^2.0.0",
    "react": ">=16.3.0",
    "react-dom": "^16.13.1",
    "react-dropzone": "^10.2.2",
    "react-snap": "^1.23.0",
    "use-deep-compare-effect": "^1.3.1",
    "wouter": "^2.4.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-wcl-frontend": "^1.0.11",
    "parcel": "latest",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "prettier": "^2.0.2"
  },
  "reactSnap": {
    "source": "dist",
    "inlineCss": true
  },
  "staticFiles": {
    "staticPath": "modules/artifacts",
    "watcherGlob": "**"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge version",
    "last 2 iOS version"
  ]
}
