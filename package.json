{
  "name": "peppermint",
  "version": "1.0.0",
  "main": "index.js",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/johncalvinroberts/peppermint",
  "author": "John Roberts",
  "scripts": {
    "prebuild": "make clean-build",
    "build": "parcel build --no-cache --no-content-hash src/index.html",
    "postbuild": "react-snap",
    "start": "parcel serve src/index.html",
    "lint": "eslint ."
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "hhmmss": "^1.0.0",
    "react": ">=16.3.0",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.2.0",
    "react-snap": "^1.23.0",
    "use-deep-compare-effect": "^1.4.0",
    "wouter": "^2.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.10.4",
    "eslint": "^7.3.1",
    "eslint-config-wcl-frontend": "^2.0.1",
    "parcel": "latest",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "prettier": "^2.2.0"
  },
  "reactSnap": {
    "source": "dist",
    "inlineCss": true
  },
  "staticFiles": {
    "staticPath": "modules/artifacts",
    "watcherGlob": "**"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge version",
    "last 2 iOS version"
  ]
}
